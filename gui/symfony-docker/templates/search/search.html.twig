{% extends 'template.html.twig' %}

{% block title %}Recherche{% endblock %}

{% block stylesheet %}
    <link rel="stylesheet" href="{{ asset('css/search.css') }}" />
    <link rel="stylesheet" href="{{ asset('assets/css/waitModal.css') }}" />
    <link href="{{ asset('proAssets/vendor/fontawesome-free/css/all.min.css') }}" rel="stylesheet" type="text/css">
    <link
        href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
        rel="stylesheet">
    <link href="{{ asset('proAssets/css/sb-admin-2.min.css') }}" rel="stylesheet">
{% endblock %}

{% block body %}
    <div class="container">
        <div class="hero-content">
            <h1>Rechercher un produit</h1>
            {{ form_start(form) }}
            <input name="{{ field_name(form.id) }}" class="form-control search-input" placeholder="Entrez le NFT ID ou scanner la ressource" type="number" required>
            <button type="button" class="scanner-button" id="scanner-button">Scanner la ressource</button>
            {{ form_end(form) }}
            <br>
        </div>
    </div>

    <!-- Loader modal -->
    <div id="loaderModal" class="loader-modal">
        <div class="loader-content">
            <p>Veuillez approcher une ressource pr√®s du lecteur</p>
            <div class="loader"></div>
        </div>
    </div>


{% endblock %}
