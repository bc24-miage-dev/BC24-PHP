<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    {% block icon %}<link rel="icon" href="{{ asset('images/logo.png') }}" type="image/png">{% endblock %}
    <title>{% block title %}BC24-PRO{% endblock %}</title>

    <!-- Custom fonts for this template-->
    <link href="{{ asset('proAssets/vendor/fontawesome-free/css/all.min.css') }}" rel="stylesheet" type="text/css">
    <link
        href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
        rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="{{ asset('proAssets/css/sb-admin-2.min.css') }}" rel="stylesheet">
    {% block style %}
    {% endblock %}

</head>

<body id="page-top">

<!-- Page Wrapper -->
<div id="wrapper">

    <!-- Sidebar -->
    <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">

        <!-- Sidebar - Brand -->
        <a class="sidebar-brand d-flex align-items-center justify-content-center" href="{{ path('app_index') }}">
            <div class="sidebar-brand-icon small"><img height="70"   alt="BC24" src="{{ asset('images/logo.png') }}"></div>
        </a>
        <br>

        <!-- partie commune de la Sidebar ; début -->
        <hr class="sidebar-divider my-0">
        <li><div class="sidebar-heading"> Navigation </div></li>
        <li class="nav-item active">
            <a class="nav-link" href="{{ path('app_pro') }}">
                <i class="fas fa-fw fa-user-tie"></i>
                <span>Menu Pro</span></a>
        </li>
        <li class="nav-item active"><a class="nav-link" href="{{ path('app_index') }}">
                <i class="fas fa-fw fa-home"></i>
                <span>Menu consommateur</span></a>
        </li>
        <hr class="sidebar-divider my-0">
        <!-- Fin partie commune -->
        {% block sidebar %}
        {% endblock %}

        <hr class="sidebar-divider my-0">

        <div class="sidebar-heading"> Rétracter la barre </div>

        <br>
        <div class="text-center d-none d-md-inline">
            <button class="rounded-circle border-0" id="sidebarToggle"></button>
        </div>
    <!-- End of Sidebar -->
    </ul>

        <!-- Header -->
    <div id="content-wrapper" class="d-flex flex-column">
        <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">
            <div class="text-center">
                <h1 class="h3 mb-0 text-gray-800">BC24 {% block titrePro %}Pro{% endblock %}</h1>
            </div>

            <div class="topbar-divider d-none d-sm-block"></div>

            <i class="fas fa-fw fa-user-tie mr-2"></i>
            <span class="mr-3 d-none d-lg-inline text-gray-600 small">{{ app.user.firstName }} {{ app.user.lastName }}</span>
            <a href="{{ path('app_logout') }}" class="d-none d-sm-inline-block btn btn-sm btn-secondary shadow-sm">
                <i class="fas fa-sign-out-alt fa-sm text-white-50"></i> Se déconnecter </a>


            <span class="ml-sm-auto"><a href="{{ path('app_index') }}">Retourner à la vue utilisateur</a></span>

        </nav>
        <!-- End of Header -->

        {% for flash_message in app.flashes('success') %}
            <div class="alert alert-success" role="alert">
                {{ flash_message }}
            </div>
        {% endfor %}
        {% for flash_message in app.flashes('error') %}
            <div class="alert alert-danger" role="alert">
                {{ flash_message }}
            </div>
        {% endfor %}
        {% for flash_message in app.flashes('info') %}
            <div class="alert alert-info" role="alert">
                {{ flash_message }}
            </div>
        {% endfor %}

        {% block body %}
            Body de base PRO
        {% endblock %}

    </div>
</div>

<div class="bg-dark">
        <!-- Footer -->
        <footer class="sticky-footer bg-dark">
            <div class="container my-auto">
                <div class="copyright text-center my-auto">
                    <span>Copyright &copy; BC24</span>
                </div>
            </div>
        </footer>
        <!-- End of Footer -->
</div>


<!-- Bootstrap core JavaScript-->
<script src="{{ asset('proAssets/vendor/jquery/jquery.min.js') }}"></script>
<script src="{{ asset('proAssets/vendor/bootstrap/js/bootstrap.bundle.min.js') }}"></script>

<!-- Core plugin JavaScript-->
<script src="{{ asset('proAssets/vendor/jquery-easing/jquery.easing.min.js') }}"></script>

<!-- Custom scripts for all pages-->
<script src="{{ asset('proAssets/js/sb-admin-2.min.js') }}"></script>
<script src="{{ asset('assets/js/scanner.js') }}"></script>


</body>

</html>
